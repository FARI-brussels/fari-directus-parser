{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution":"node",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"] // Add this line
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
