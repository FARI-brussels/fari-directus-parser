{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution":"node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
  },
  "include": ["src", "./tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
